	era:affectedClass era:TrainDetectionSystem;     
	era:scope "local"; 
	rdfs:comment "Reference to the technical specification of train detection system." ;
	era:rinfIndex "1.1.1.3.7.1.2", "1.2.1.1.6.1" ;
